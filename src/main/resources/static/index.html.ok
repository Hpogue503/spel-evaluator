<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Evaluator Tools</title>
    <style>

        :root {
            --primary: #4caf50;
            --primary-hover: #43a047;
            --bg-main: #f4f6f8;
            --bg-card: #ffffff;
            --text-main: #222222;
            --text-muted: #666666;
            --border: #ddd;
            --shadow: rgba(0,0,0,0.1);
            --input-bg: #fdfdfd;
            --pre-bg: #f5f5f5;
        }

        @media (prefers-color-scheme: dark) {
            :root {
                --primary: #66bb6a;
                --primary-hover: #57a05b;
                --bg-main: #121212;
                --bg-card: #1e1e1e;
                --text-main: #f1f1f1;
                --text-muted: #aaa;
                --border: #333;
                --shadow: rgba(0,0,0,0.6);
                --input-bg: #1a1a1a;
                --pre-bg: #2a2a2a;
            }
        }

        body {
            font-family: Arial, sans-serif;
            margin: 1rem 2rem; /* menos margen superior */
            background: var(--bg-main);
            color: var(--text-main);
        }

        h1 {
            text-align: center;
            margin-bottom: 1rem; /* menos espacio debajo del título */
        }


        .tabs {
            display: flex;
            border-bottom: 2px solid var(--border);
            margin-bottom: 1rem;
            cursor: pointer;
        }

        .tab {
            padding: 0.8rem 1.2rem;
            font-weight: bold;
            color: var(--text-muted);
            transition: all 0.2s;
        }

        .tab.active {
            color: var(--primary);
            border-bottom: 3px solid var(--primary);
        }

        .tab:hover { color: var(--primary-hover); }

        .tab-content { display: none; animation: fadeIn 0.3s; }
        .tab-content.active { display: block; }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Flex layout for Find & Evaluate side by side */
        .tab-inner {
            display: flex;
            gap: 2rem;
            flex-wrap: wrap;
        }

        /* Card style */
        .card {
            background: var(--bg-card);
            padding: 1.5rem;
            border-radius: 16px;
            box-shadow: 0 6px 18px var(--shadow);
            flex: 1;
            min-width: 300px;
        }

        label { font-weight: bold; margin-top: 0.5rem; display:block; }
        .hint { font-size: 0.85rem; color: var(--text-muted); margin-bottom: 0.5rem; }

        /* ===== Inputs y textarea ===== */
        input, textarea, button {
            box-sizing: border-box;
            width: 100%;
            padding: 0.6rem 0.8rem;
            margin-top: 0.3rem;
            border-radius: 10px;
            border: 1px solid var(--border);
            font-family: monospace;
            font-size: 0.75rem; /* más pequeño */
            background: var(--input-bg);
            color: var(--text-main);
        }

        /* textarea específico */
        textarea {
            height: 180px;
            resize: vertical;
            font-size: 0.75rem; /* más pequeño */
        }

        /* buttons */
        button {
            padding: 0.8rem;
            margin-top: 1rem;
            border-radius: 12px;
            border: none;
            background: var(--primary);
            color: #fff;
            font-size: 0.65rem; /* puede quedar un poco más grande que textarea/input */
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        /* pre (resultados) */
        pre {
            margin-top: 1rem;
            background: var(--pre-bg);
            padding: 0.8rem;
            border-radius: 10px;
            font-family: monospace;
            font-size: 0.65rem; /* letra más pequeña */
            white-space: pre-wrap; /* permite que el texto se divida en varias líneas */
            word-break: break-word; /* rompe palabras largas si es necesario */
            overflow-x: hidden;    /* elimina scroll horizontal */
            border: 1px solid var(--border);
            cursor: pointer;
        }

        button:hover { background: var(--primary-hover); }


        pre:hover { background: rgba(0, 0, 0, 0.05); }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            body {
                margin: 1rem;
            }

            textarea {
                height: 220px;
            }
        }

    </style>
</head>
<body>

<h1>Evaluator Tools</h1>

<div class="tabs">
    <div class="tab active" data-tab="spel">SpEL</div>
    <div class="tab" data-tab="jsonpath">JSONPath</div>
</div>

<!-- ===== SpEL TAB ===== -->
<div class="tab-content active" id="spel">
    <div class="tab-inner">
        <!-- Find -->
        <div class="card">
            <h2>Find Value</h2>
            <div class="hint">Enter a value to search in JSON and generate SpEL paths.</div>
            <label>Value:</label>
            <input type="text" id="find-value" placeholder="Example: John">
            <label>JSON:</label>
            <textarea id="find-json" placeholder='{"firstName":"John"}'></textarea>
            <button onclick="findExpression()">Generate SpEL</button>
            <pre id="find-result">Click button to see results</pre>
        </div>

        <!-- Evaluate -->
        <div class="card">
            <h2>Evaluate Expression</h2>
            <div class="hint">Enter a SpEL expression to evaluate against JSON.</div>
            <label>Expression:</label>
            <input type="text" id="eval-expression" placeholder="data.firstName">
            <label>JSON:</label>
            <textarea id="eval-json" placeholder='{"firstName":"John"}'></textarea>
            <button onclick="evaluateExpression()">Evaluate</button>
            <pre id="eval-result">Click button to see results</pre>
        </div>
    </div>
</div>

<!-- ===== JSONPath TAB ===== -->
<div class="tab-content" id="jsonpath">
    <div class="tab-inner">
        <!-- Find -->
        <div class="card">
            <h2>Find Value</h2>
            <div class="hint">Enter a value to generate JSONPath expressions.</div>
            <label>Value:</label>
            <input type="text" id="jp-find-value" placeholder="Juan">
            <label>JSON:</label>
            <textarea id="jp-find-json" placeholder='{"user":{"name":"Juan"}}'></textarea>
            <button onclick="findJsonPath()">Generate JSONPath</button>
            <pre id="jp-find-result">Click button to see results</pre>
        </div>

        <!-- Evaluate -->
        <div class="card">
            <h2>Evaluate JSONPath</h2>
            <div class="hint">Evaluate a JSONPath expression against JSON.</div>
            <label>Path:</label>
            <input type="text" id="jp-eval-path" placeholder="$.user.name">
            <label>JSON:</label>
            <textarea id="jp-eval-json" placeholder='{"user":{"name":"Juan"}}'></textarea>
            <button onclick="evaluateJsonPath()">Evaluate</button>
            <pre id="jp-eval-result">Click button to see results</pre>
        </div>
    </div>
</div>

<script>
    const tabs = document.querySelectorAll('.tab');
    const contents = document.querySelectorAll('.tab-content');

    tabs.forEach(tab => {
        tab.addEventListener('click', () => {
            tabs.forEach(t => t.classList.remove('active'));
            contents.forEach(c => c.classList.remove('active'));
            tab.classList.add('active');
            document.getElementById(tab.dataset.tab).classList.add('active');
        });
    });
</script>

<script src="app.js"></script>
</body>
</html>